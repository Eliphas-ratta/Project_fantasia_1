{% extends 'base.html.twig' %}

{% block title %}Password Reset Request{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
<div class="login-wrapper">
  <div class="login-card">
    <h2>Forgot your password?</h2>
    <p class="subtitle">
      Enter your email address and we'll send you a link to reset your password.
    </p>

    {% for message in app.flashes('success') %}
      <div class="alert alert-success text-center mb-3">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
      <div class="alert-error text-center mb-3">{{ message }}</div>
    {% endfor %}

    {{ form_start(requestForm, {'attr': {'class': 'password-reset-form'}}) }}
      <div class="mb-3">
        {{ form_label(requestForm.email, 'Email address', {'label_attr': {'class': 'text-light fw-bold'}}) }}
        {{ form_widget(requestForm.email, {'attr': {'class': 'input-field', 'placeholder': 'Enter your email'}}) }}
        {{ form_errors(requestForm.email) }}
      </div>

      <button type="submit" class="btn-login">Send reset link</button>
    {{ form_end(requestForm) }}

    <div class="login-footer mt-4">
      <p>Remember your password? 
        <a href="{{ path('app_login') }}">Go back to login</a>
      </p>
    </div>
  </div>
</div>
{% endblock %}
