<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Project Fantasia{% endblock %}</title>

  {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('custom') }}
    {{ encore_entry_link_tags('sidebarcss') }}
    {{ encore_entry_link_tags('world') }}
    {{ encore_entry_link_tags('registercss') }}
  {% endblock %}
</head>

<body class="fantasia-body">
  <!-- üåå HEADER -->
  <header class="fantasia-navbar px-4 py-3">
    <div class="container-fluid d-flex justify-content-between align-items-center w-100">

      <!-- üî∞ Logo -->
      <a class="navbar-brand fantasia-logo" href="{{ path('app_home') }}">
        Project Fantasia
      </a>

      <!-- üåç Navigation -->
      <div class="d-flex gap-4 align-items-center">
        <a class="nav-link-fantasia" href="{{ path('app_home') }}">Home</a>
        <a class="nav-link-fantasia" href="{{ path('app_world_index') }}">Worlds</a>
        {% if app.user %}
          <a class="nav-link-fantasia" href="{{ path('app_friends') }}">Friends</a>
        {% endif %}
      </div>

      <!-- üë§ User / Auth -->
      <div class="d-flex gap-3 align-items-center">
        {% if app.user %}
          {% if app.user.profileImage %}
            <img src="{{ asset('uploads/profile_images/' ~ app.user.profileImage) }}"
                 alt="Profile" width="36" height="36"
                 class="user-avatar-nav">
          {% endif %}
          <a class="nav-link-fantasia" href="{{ path('app_profile') }}">Profile</a>
          <a class="btn-logout" href="{{ path('app_logout') }}">Logout</a>
        {% else %}
          <a class="btn-login-nav" href="{{ path('app_login') }}">Login</a>
          <a class="btn-register-nav" href="{{ path('app_register') }}">Register</a>
        {% endif %}
      </div>
    </div>
  </header>

  <!-- ‚ö° FLASH MESSAGES -->
  <div class="container mt-3">
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="alert-flash alert-{{ label }}">
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}
  </div>

  <!-- üß≠ MAIN LAYOUT -->
  <div class="container-fluid">
    <div class="row friends-row">
      {% if app.user and app.request.attributes.get('_route') == 'app_home' %}
        <!-- üß© Sidebar Amis -->
        <aside id="friendsSidebar">
          <button id="toggleSidebar" aria-label="Toggle friends panel">‚ùÆ</button>

          {% include 'friendship/_sidebar.html.twig' with {
            friends: get_friends() ?? [],
            pendingReceived: get_pending_received() ?? [],
            pendingSent: get_pending_sent() ?? []
          } only %}
        </aside>
      {% endif %}

      <!-- üåç Contenu principal -->
      <main id="appMain" class="col p-4">
        {% block body %}{% endblock %}
      </main>
    </div>
  </div>

  {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('sidebarjs') }}

    <!-- ‚úÖ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
  {% endblock %}
</body>
</html>
